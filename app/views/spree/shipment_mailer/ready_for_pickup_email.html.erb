<table class="row header">
  <tr>
    <td>
      <p class="lede">
        <%= Spree.t('shipment_mailer.ready_for_pickup_email.dear_customer') %>
      </p>
      <p>
        <%= Spree.t('shipment_mailer.ready_for_pickup_email.instructions', number: @shipment.order.number) %>
      </p>
      <p>
        <%= Spree.t('shipment_mailer.ready_for_pickup_email.shipment_summary') %>
      </p>
      <table class="container">
        <tr>
          <td class="wrapper last">
            <table class="twelve columns">
              <%= render collection: @shipment.manifest.map(&:line_item), partial: 'spree/shared/mailer_line_item', as: :line_item %>
            </table>
          </td>
        </tr>
      </table>
      <p>
        <%= Spree.t('shipment_mailer.ready_for_pickup_email.thanks') %>
      </p>
    </td>
    <td class="expander"></td>
  </tr>
</table>
